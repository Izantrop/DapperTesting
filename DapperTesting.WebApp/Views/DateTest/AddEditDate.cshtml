@model DapperTesting.DTOs.DateTestDTO

@{
    string title;
    if (Model.Id <= 0)
    {
        title = "AddDate";
    }
    else
        title = "EditDate";

    ViewData["Title"] = title;
}

<h4>DateTestDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action=@title>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date1" class="control-label"></label>
                <input asp-for="Date1" class="form-control" />
                <span asp-validation-for="Date1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime1" class="control-label"></label>
                <input asp-for="DateTime1" class="form-control" />
                <span asp-validation-for="DateTime1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime2" class="control-label"></label>
                <input asp-for="DateTime2" class="form-control" />
                <span asp-validation-for="DateTime2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@title class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DateTest">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
