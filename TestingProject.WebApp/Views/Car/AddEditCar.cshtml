                data: formdata,
                processData: false,
                contentType: false,
                success: function (id) {
                    console.log(id);
                    window.location.href = "/Car/Index"
                },
                error: function (jhrx) {
                    console.log(jhrx);
                }
            })
            */

        }
    </script>

}
