
@model TestingProject.DTOs.AttachmentDTO


<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
                <div id="addAtt" class="modal-body">
                    <form id="addForm" method="post" enctype="multipart/form-data" asp-controller="Attachment" asp-action="AddAttachment">
                        <div class="form-group">
                            <div class="col-md-10">
                                <p>Upload one or more files using this form:</p>
                                <input asp-for="OriginalFileName" />
                                <input asp-for="FileName" />
                                <input asp-for="FilePath" />
                                <input asp-for="DateAdded" />
                                <input id="files" type="file" name="files" multiple />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="button" value="Upload" onclick="addAtt(this);" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
